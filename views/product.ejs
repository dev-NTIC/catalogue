<%- include('base/header.ejs') %>
     
<div class="row">
  <div class="col-12">
    <div class="card my-4">
      <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
        <div class="pageTab">
          <h6>Produits</h6>
          <button type="button" data-bs-toggle="modal" data-bs-target="#modal-form" onclick="resetForm()">Ajouter</button>
        </div>
      </div>
      <div class="card-body px-0 pb-2">
        <div class="table-responsive p-0">

          <table class="table align-items-center mb-0">
            <thead>
              <tr>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 text-center">Image</th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 text-center">Modèle</th>
                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Categorie</th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 text-center">Taille</th>
                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">OS</th>
                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Prix</th>
                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Points</th>
                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Nouveau</th>
                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Disponibilité</th>
                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Top vente</th>
                <th id="thControl"></th>
              </tr>
            </thead>
            
            <tbody>
              <% if (data.length != 0){ %> 
                <% for (let product of data) { %>
                  <tr>
                    <td>
                      <img src="<%= product.productimg %>" alt="IMG" height="60px" style="margin: 0 20px;">
                    </td>
                    <td>
                      <p class="text-xs font-weight-bold mb-0 text-center"><%= product.model %></p>
                    </td>
                    <td class="align-middle text-center text-sm">
                      <p class="text-xs font-weight-bold mb-0 text-center"><%= product.category %></p>
                    </td>
                    <td class="align-middle text-center text-sm">
                      <p class="text-xs font-weight-bold mb-0 text-center"><%= product.size %> "</p>
                    </td>
                    <td class="align-middle text-center text-sm">
                      <p class="text-xs font-weight-bold mb-0 text-center"><%= product.os %></p>
                    </td>
                    <td class="align-middle text-center text-sm">
                      <p class="text-xs font-weight-bold mb-0 text-center"><%= product.price %> DA</p>
                    </td>
                    <td class="align-middle text-center text-sm">
                      <p class="text-xs font-weight-bold mb-0 text-center"><%= product.points %></p>
                    </td>

                    <% if (product.is_new == 'true') {%> 
                      <td class="align-middle text-center text-sm">
                        <p class="text-xs font-weight-bold mb-0 text-center">Oui</p>
                      </td>
                    <% } else { %> 
                      <td class="align-middle text-center text-sm">
                        <p class="text-xs font-weight-bold mb-0 text-center">Non</p>
                      </td>
                    <% } %>

                    <% if (product.is_available == 'true') {%> 
                      <td class="align-middle text-center text-sm">
                        <p class="text-xs font-weight-bold mb-0 text-center">Oui</p>
                      </td>
                    <% } else { %> 
                      <td class="align-middle text-center text-sm">
                        <p class="text-xs font-weight-bold mb-0 text-center">Non</p>
                      </td>
                    <% } %>

                    <% if (product.is_bestselling == 'true') {%> 
                      <td class="align-middle text-center text-sm">
                        <p class="text-xs font-weight-bold mb-0 text-center">Oui</p>
                      </td>
                    <% } else { %> 
                      <td class="align-middle text-center text-sm">
                        <p class="text-xs font-weight-bold mb-0 text-center">Non</p>
                      </td>
                    <% } %>

                    <td class="catPanel" class="align-middle">
                      <button id="editBtn" data-bs-toggle="modal" data-bs-target="#modal-form" onclick="editForm('<%= product.id %>')"></button>
                    </td>
                  </tr>
                <% } %>
              <% } else{ %>
                <tr>
                  <td class="text-center">-</td>
                  <td class="text-center">-</td>
                  <td class="text-center">-</td>
                  <td class="text-center">-</td>
                  <td class="text-center">-</td>
                  <td class="text-center">-</td>
                  <td class="text-center">-</td>
                  <td class="text-center">-</td>
                  <td class="text-center">-</td>
                </tr>
              <% } %> 
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
